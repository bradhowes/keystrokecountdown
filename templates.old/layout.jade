doctype html
block vars
  - var bodyclass = 'index';
html.no-js(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='description', content=blog.description)
      title
        block title
          = blog.title
      link(rel='author', href='https://google.com/+BlakeEmbrey')
      link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=blog.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic,700italic|Source+Code+Pro')
      link(rel='stylesheet', href='/vendor/normalize/normalize.css')
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='/css/screen.css')
      link(rel='stylesheet', href='/css/prism.css')
      link(rel='stylesheet', href='/vendor/fontello/css/blog-embedded.css')
      link(rel='stylesheet', href='/vendor/rrssb/rrssb.css')
  body(class=bodyclass)
    div.wrapper.cf
      div.wrapper-border

      block header
        header.header.container
          h1.header-title
            a(href='/', title=blog.title)= blog.title

      main.content.container(role='main')
        block content

    footer.footer(role='contentinfo')
      a.icon-home.back-to-home(href='/', title=blog.title)
      block footer
        p.container
          | #{new Date().getFullYear()}&nbsp;&copy;&nbsp;
          a(href=owner.uri)= owner.name

    if integrations.analytics
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{integrations.analytics}', 'auto');
        ga('require', 'displayfeatures');
        ga('send', 'pageview');

    script(src='/vendor/moment.js/moment.min.js')

    //- Render time elements using relative time.
    script.
      (function (els) {
        if (!window.moment) {
          return;
        }

        for (var i = 0; i < els.length; i++) {
          var el   = els[i];
          var date = el.getAttribute('datetime');

          el.setAttribute('title', el.textContent);
          el.textContent = window.moment(date).fromNow();
        }
      })(document.getElementsByClassName('timestamp'));

    script(src='/vendor/jquery/jquery.min.js')
    script(src='/vendor/rrssb/rrssb.min.js')
    script(src='/vendor/prism/prism.js')
