<!DOCTYPE html><!-- -*- Mode: html -*- -->
<html lang="en-US">
  {{>html-head}}
  <body class="post-template nav-closed">
    {{>navigation}}
    <div class="site-wrapper">
      {{>header}}
      <main class="content" role="main">
        <article class="post">
          <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
              {{site.description}}
            </section>
          </header>
          <section class="post-content">
            {{{contents}}}
          </section>
          <section class="listing-content">
            <ul>
              {{#each collections.articles}}
              <li>
                <time class="post-date" datetime="{{date}}">{{formattedDate}}</time>
                <div><a href="{{relativeUrl}}">{{title}}</a></div>
              </li>
              {{/each}}
            </ul>
          </section>
          {{>author}}
        </article>
      </main>
      {{#if collections.articles}}
      <aside class="read-next">
        {{#with collections.articles.[0]}}
        <a class="read-next-story{{#if image}}"
           style="background-image: url({{image}}){{else}} no-cover{{/if}}"
           href="{{relativeUrl}}">
          <section class="post">
            <h2>{{title}}</h2>
            {{#if snippet}}<p>{{{snippet}}}</p>{{/if}}
          </section>
        </a>
        {{/with}}
      </aside>
      {{/if}}
      {{>footer}}
    </div>
    {{>scripts}}
  </body>
</html>
