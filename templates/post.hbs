<!DOCTYPE html><!-- -*- Mode: html -*- -->
<html lang="en-US">
  {{>html-head}}
  <body class="post-template nav-closed">
    {{>navigation}}
    <div class="site-wrapper">
      {{>header}}
      <main class="content" role="main">
        <article class="post">
          {{>title}}
          <section class="post-content">
            {{{contents}}}
          </section>
          {{>author}}
        </article>
      </main>
      <aside class="read-next">
        {{#if next}}
        <a class="read-next-story{{#if next.image}}"
           style="background-image: url({{next.image}}){{else}} no-cover{{/if}}"
           href="{{next.relativeUrl}}">
          <section class="post">
            <h2>{{next.title}}</h2>
            {{#if next.snippet}}{{{next.snippet}}}{{/if}}
          </section>
        </a>
        {{/if}}
        {{#if previous}}
        <a class="read-next-story prev{{#if previous.image}}"
           style="background-image: url({{previous.image}}){{else}} no-cover{{/if}}"
           href="{{previous.relativeUrl}}">
          <section class="post">
            <h2>{{previous.title}}</h2>
            {{#if previous.snippet}}{{{previous.snippet}}}{{/if}}
          </section>
        </a>
        {{/if}}
      </aside>
      {{>footer}}
    </div>
    {{>scripts}}
  </body>
</html>
