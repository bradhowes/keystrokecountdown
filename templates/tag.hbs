<!DOCTYPE html><!-- -*- Mode: html -*- -->
<html lang="en-US">
  {{>html-head}}
  <body class="post-template nav-closed">
    {{>navigation}}
    <div class="site-wrapper">
      {{>header}}
      <main class="content" role="main">
        <article class="post">
          <header class="post-header">
            <h1 class="post-title">{{tag}} Topic</h1>
            <section class="post-meta">
              <a class="post-date" href="/topics"><i class="fa fa-tags" aria-hidden="true"></i></a>
              List of articles tagged with "{{tag}}"
            </section>
          </header>
          <section class="post-content">
          </section>
          <section class="listing-content">
            <ul>
              {{#each pagination.files}}
              <li>
                <time class="post-date" datetime="{{this.postDate}}">{{this.formattedDate}}</time>
                <div><a href="{{this.relativeUrl}}">{{this.title}}</a></div>
                <div class="post-meta">{{this.description}}</div>
              </li>
              {{/each}}
            </ul>
          </section>
          {{>author}}
        </article>
      </main>
      {{#if pagination.files}}
      <aside class="read-next">
        {{#with pagination.files.[0]}}
        <a class="read-next-story{{#if image}}"
           style="background-image: url({{image}}){{else}} no-cover{{/if}}"
           href="{{relativeUrl}}">
          <section class="post">
            <h2>{{title}}</h2>
            <div class="post-meta">{{description}}</div>
          </section>
        </a>
        {{/with}}
      </aside>
      {{/if}}
      {{>footer}}
    </div>
    {{>scripts}}
  </body>
</html>
